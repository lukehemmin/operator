# Provider selection
AGENT_PROVIDER=ollama
AGENT_MODEL=llama3.1:latest

# Approval and safety
AGENT_APPROVAL=on-request
AGENT_SAFE_MODE=extended
AGENT_MAX_STEPS=12

# Workspace root (default: current dir)
# AGENT_WORKSPACE=/home/ubuntu/agent-workspace

# Config dir (default: <workspace>/.agentic)
# AGENT_CONFIG_DIR=.agentic

# Timeouts
AGENT_REQUEST_TIMEOUT=120
AGENT_TOOL_TIMEOUT=180

# Web server
AGENT_SERVE_PORT=8080

# Reasoning
# AGENT_REASONING=auto  # off|on|auto
# AGENT_REASONING_EFFORT=medium  # low|medium|high

# Streaming
# AGENT_STREAM=true

# Logging
AGENT_LOG_DIR=logs

# OpenAI
# OPENAI_API_KEY=sk-...
# OPENAI_BASE_URL=https://api.openai.com

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# Ollama
# OLLAMA_BASE_URL=http://localhost:11434

# OpenRouter
# OPENROUTER_API_KEY=sk-or-v1-...
# OPENROUTER_BASE_URL=https://openrouter.ai/api
# OPENROUTER_REFERER=https://yourapp.example
# OPENROUTER_APP_NAME=AgenticCLI

# LM Studio (OpenAI-compatible local API)
# LMSTUDIO_BASE_URL=http://localhost:1234
