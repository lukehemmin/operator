# Ollama provider preset (local or remote)
AGENT_PROVIDER=ollama
AGENT_MODEL=llama3.1:latest  # or qwen2.5:latest, etc.

# Behavior
AGENT_APPROVAL=on-request
AGENT_SAFE_MODE=extended
AGENT_MAX_STEPS=12
AGENT_SERVE_PORT=8080

# Paths
# AGENT_WORKSPACE=/home/ubuntu/agent-workspace
AGENT_CONFIG_DIR=.agentic
AGENT_LOG_DIR=logs

# Timeouts
AGENT_REQUEST_TIMEOUT=120
AGENT_TOOL_TIMEOUT=180

# Reasoning (optional)
# AGENT_REASONING=off  # 대부분의 로컬 모델은 전용 reasoning 필드 미지원

# Ollama endpoint
# Local default
OLLAMA_BASE_URL=http://localhost:11434
# Or remote, e.g.
# OLLAMA_BASE_URL=http://10.0.0.12:11434

